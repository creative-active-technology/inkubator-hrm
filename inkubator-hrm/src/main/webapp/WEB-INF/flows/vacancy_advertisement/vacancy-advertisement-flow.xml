<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
      	http://www.springframework.org/schema/webflow
      	http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	start-state="add_advertisement">      	
      	
    <on-start>
    	<set name="flowScope.id" value="requestParameters.id" type="java.lang.Long" />
      	<evaluate expression="vacancyAdvertisementFormController.initialProcessFlow(flowRequestContext)"/>
	</on-start>

    <view-state id="add_advertisement" view="vacancy_advertisement_form.xhtml">
		<transition on="next" to="doAdvertisementValidation"/>
		<transition on="end" to="end"/>
    </view-state>
    
    <view-state id="view_recruitment_req" view="vacancy_recruitment_req_view.xhtml">    
    	<transition on="add" to="doAddRecruitmentReq"/>
    	<transition on="update" to="doUpdateRecruitmentReq"/>
    	<transition on="delete" to="doDeleteRecruitmentReq"/>
    	<transition on="save" to="doSave"/>
    	<transition on="back" to="add_advertisement"/>
    	<transition on="end" to="end"/>
    </view-state>
    
    <view-state id="add_recruitment_req" view="vacancy_recruitment_req_form.xhtml">
    	<transition on="back" to="view_recruitment_req"/>
		<transition on="add" to="doAddRecruitmentReqValidation"/>
		<transition on="update" to="doUpdateRecruitmentReqValidation"/>
		<transition on="end" to="end"/>
    </view-state>	
    
    <action-state id="doAdvertisementValidation">
        <evaluate expression="vacancyAdvertisementFormController.doAdvertisementValidation(flowRequestContext)"/>
        <transition on="success" to="view_recruitment_req"/>
        <transition on="error" to="add_advertisement"/>
    </action-state>
    
    <action-state id="doAddRecruitmentReqValidation">
        <evaluate expression="vacancyAdvertisementFormController.doAddRecruitmentReqValidation(flowRequestContext)"/>        
        <transition on="success" to="view_recruitment_req"/>
        <transition on="error" to="add_recruitment_req"/>
    </action-state>
    
    <action-state id="doUpdateRecruitmentReqValidation">
        <evaluate expression="vacancyAdvertisementFormController.doUpdateRecruitmentReqValidation(flowRequestContext)"/>        
        <transition on="success" to="view_recruitment_req"/>
        <transition on="error" to="add_recruitment_req"/>
    </action-state>
    
    <action-state id="doAddRecruitmentReq">
        <evaluate expression="vacancyAdvertisementFormController.doAddRecruitmentReq(flowRequestContext)"/>        
        <transition on="success" to="add_recruitment_req"/>
    </action-state>
    
    <action-state id="doUpdateRecruitmentReq">
        <evaluate expression="vacancyAdvertisementFormController.doUpdateRecruitmentReq(flowRequestContext)"/>        
        <transition on="success" to="add_recruitment_req"/>
    </action-state>
    
    <action-state id="doDeleteRecruitmentReq">
        <evaluate expression="vacancyAdvertisementFormController.doDeleteRecruitmentReq(flowRequestContext)"/>        
        <transition on="success" to="view_recruitment_req"/>
    </action-state>
    
	<action-state id="doSave">
        <evaluate expression="vacancyAdvertisementFormController.doSave(flowRequestContext)"/>
        <transition on="success_need_approval" to="end"/>
        <transition on="success_without_approval" to="end_detail"/>
        <transition on="error" to="view_recruitment_req"/>
    </action-state >

    <end-state id="end_detail" view="externalRedirect:contextRelative:/protected/recruitment/vacancy_advertisement_detail.htm?execution=e#{flowScope.vacancyAdvertisementModel.id}"/>
    <end-state id="end" view="externalRedirect:contextRelative:/protected/recruitment/vacancy_advertisement_view.htm" />
    
</flow>