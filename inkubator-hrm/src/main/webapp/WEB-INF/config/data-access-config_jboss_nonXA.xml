          http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.1.xsd
       http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.1.xsd
       http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache.xsd">

    <!--Scan service dan Dao--> 
    <context:component-scan base-package="com.csl.idm.service.impl" />
    <context:component-scan base-package="com.csl.idm.dao.impl" />
    <context:component-scan base-package="com.csl.idm.web.listener" />
    <!--Activasi Anotasi dan Transaksi Management-->
    <tx:annotation-driven/>
    <cache:annotation-driven />
     <jee:jndi-lookup id="dataSourceJBoss" jndi-name="java:jboss/MySQLNonXA" 
                     expected-type="javax.sql.DataSource"/>
